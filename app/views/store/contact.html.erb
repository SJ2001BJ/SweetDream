<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Please contact us</title>
    <link rel="contact" href="http://localhost:3000/contact">

  </head>
  <body>
    <h1 class="title"> <%= t('.title') %> </h1>

    <div class="form">
      <%= form_tag request_contact_path, method: 'post' do %>
         <%= label_tag :name, t('.name') %>
         <%= text_field_tag :name, '', title: t('.enter_name'), size: 50 %>

         <%= label_tag :email, t('.email') %>
         <%= email_field_tag :email, '', title: t('.enter_email') %>

         <%= label_tag :telephone, t('.telephone') %>
         <%= telephone_field_tag :telephone, '', title: t('.enter_telephone') %>

         <%= label_tag :message, t('.message') %>
         <%= text_field_tag :message, '', title: t('.enter_message'), size: 100 %>

         <%= submit_tag t('.submit') %>
        <% end %>
    </div>
  </body>
  <div class="jumbotron" style="background-color:#df5b6e" >
    <div class="container text-center" >
      <img src="assets/action-image.jpg" alt="">
      <h1 >Sweet Dream</h1>

    </div>
  </div>

</html>
