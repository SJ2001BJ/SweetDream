<p id="notice"><%= notice %></p>
<h2 class="candyt"> Your SweetDream Cart</h2>
<div class="container-fluid text-center bg-grey">
  <h4>In the future</h4>
  <div class="row text-center">
    <div class="col-sm-4">
      <div class="thumbnail">
        <img src="assets/lollipop.webp" alt="" width="400" height="300">
        <p><strong>lollipop</strong></p>

      </div>
    </div>
    <div class="col-sm-4">
      <div class="thumbnail">
        <img src="assets/DIY.jpg" alt="" width="400" height="300">
        <p><strong>DIY Candy</strong></p>

      </div>
    </div>
    <div class="col-sm-4">
      <div class="thumbnail">
        <img src="assets/milkshake1.jpg" alt="" width="400" height="300">
        <p><strong>Milk shake</strong></p>

      </div>
    </div>
  </div>
</div>

<div class=" cartB">
  <table style="font-weight:bold; ">
    <% if !@cart.nil? %>
      <% @cart.line_items.each do |item|%>
       <tr style="border-bottom:1px solid #BBB;height: 30px;">
         <td>&nbsp;<%= item.quantity %> &times;</td>
         <td><%= item.product.title %></td>
          <td class='item_price'><%= number_to_currency(item.total_price) %> </td>
          <td style="padding-left: 15px;color:red"><a href="carts/delete_one_pro?item_id=<%= item.id %>&cart_id=<%=item.cart_id%>">delete</a></td>
       </tr>
      <% end %>
    <% end %>


    <tr class="total_line" style="height: 30px;">
      <td colspan="2">Total</td>
      <td class="total_cell"><%= number_to_currency(@cart.total_price) rescue 0 %></td>
    </tr>
    <tr>
      <td class="empty">
        <%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      <td>
        <button style="float:right;background-color:#f66f6a; color:white;width: 65px; height: 39px;border:0;font-size: 16px; box-sizing: content-box;border-radius: 5px;">
          <a href="/carts/order_info?cart_ids=<%= @cart.line_items.pluck("id").join("||") rescue ""%>">Pay</a>
        </button>

      </td>
    </tr>
  </table>
</div>
